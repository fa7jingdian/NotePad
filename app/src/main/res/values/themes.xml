<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 主题样式定义 -->
    <style name="AppTheme_Light" parent="android:Theme.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:listViewStyle">@style/ListViewStyle.Light</item>
        <item name="android:editTextStyle">@style/EditTextStyle.Light</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="android:textAppearanceLargePopupMenu">@android:style/TextAppearance.Large</item>
        <item name="android:textAppearanceSmallPopupMenu">@android:style/TextAppearance.Small</item>
        <item name="groupTitleTextColor">@android:color/white</item>
    </style>
    
    <!-- 深色主题 -->
    <style name="AppTheme_Dark" parent="android:Theme.Black">
        <item name="android:windowBackground">#222222</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:listViewStyle">@style/ListViewStyle.Dark</item>
        <item name="android:editTextStyle">@style/EditTextStyle.Dark</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textAppearanceLargePopupMenu">@android:style/TextAppearance.Large.Inverse</item>
        <item name="android:textAppearanceSmallPopupMenu">@android:style/TextAppearance.Small.Inverse</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle.Dark</item>
        <item name="android:listPopupWindowStyle">@style/ListPopupWindowStyle.Dark</item>
        <item name="groupTitleTextColor">@android:color/white</item>
    </style>
    
    <!-- PopupMenu样式 - 深色 -->
    <style name="PopupMenuStyle.Dark" parent="android:Widget.PopupMenu">
        <item name="android:popupBackground">#444444</item>
    </style>
    
    <!-- ListPopupWindow样式 - 深色 -->
    <style name="ListPopupWindowStyle.Dark" parent="android:Widget.ListPopupWindow">
        <item name="android:popupBackground">#444444</item>
    </style>
    
    <!-- 列表视图样式 - 浅色 -->
    <style name="ListViewStyle.Light" parent="android:Widget.ListView">
        <item name="android:background">@android:color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>
    
    <!-- 列表视图样式 - 深色 -->
    <style name="ListViewStyle.Dark" parent="android:Widget.ListView">
        <item name="android:background">#222222</item>
        <item name="android:cacheColorHint">#222222</item>
    </style>
    
    <!-- 编辑框样式 - 浅色 -->
    <style name="EditTextStyle.Light" parent="android:Widget.EditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <!-- 编辑框样式 - 深色 -->
    <style name="EditTextStyle.Dark" parent="android:Widget.EditText">
        <item name="android:background">#444444</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#AAAAAA</item>
    </style>
    
    <!-- Spinner样式 - 浅色 -->
    <style name="SpinnerStyle.Light" parent="android:Widget.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#F5F5F5</item>
    </style>
    
    <!-- Spinner样式 - 深色 -->
    <style name="SpinnerStyle.Dark" parent="android:Widget.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#555555</item>
    </style>
</resources>